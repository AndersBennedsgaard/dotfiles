alias disp="display"
alias ll="ls -Alh"
alias ls='ls -lh'
alias py="python3"
alias rm="rm -f"

alias conflicts="git diff --name-only --diff-filter=U"
alias log='git log --all --decorate --oneline --graph'

alias du="du -sh */"
alias cd..='cd ..'
alias mktar='tar -cvf'
alias untar='tar -xvf'

alias update_display='source ~/dotfiles/.update_display' 

unamestr=$(uname)
if [[ "$unamestr" == "freebsd" ]]; then
    alias ls='ls -G'
else
    alias ls='ls --color=auto'
fi

# WSL shortcuts:
alias start_jupyter='jupyter notebook --ip $(hostname -I)'
alias start_docker='sudo /etc/init.d/docker start'
